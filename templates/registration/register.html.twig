{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<!-- Contact--> 
    <section class="page-section" id="contact">
        <div class="container">
            <div class="text-center" style="margin:3rem;"> 
        
                {# {% for message in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ message }}</div>
                {% endfor %} #}

                


                <h1 class="h3 mb-3 font-weight-normal">Inscrivez-vous</h1>

                {# <div class="text-center" style="margin:1rem;"> #}
                {{ form_start(registrationForm) }}
                    {# {{ form_errors(form) }} #}
                    {{ form_row(registrationForm.firstName, {label: 'Prenom'}) }}
                    {{ form_row(registrationForm.lastName, {label: 'Nom'}) }}
                    {{ form_row(registrationForm.email, {label: 'Email'}) }}
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Mot de passe'
                    }) }}
                    {{ form_row(registrationForm.agreeTerms, {label: 'Accepter les conditions'}) }}

                    <button type="submit" class="btn btn-lg btn-secondary" style="margin:2rem;">M'inscrire</button>
                {{ form_end(registrationForm) }}
                {# </div> #}
            </div>
        </div>
    </section>

{% endblock %}
