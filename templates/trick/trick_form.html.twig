
{{ form_start(form) }}
    {{ form_row(form.trickName, {'label': 'Nom', 'attr': {'placeholder': 'Nom de la figure...'}}) }}
    {{ form_row(form.description, {'label': 'Description', 'attr': {'placeholder': 'Description de la figure...'}}) }}
    
    {{ form_row(form.images, {'label': 'Image', 'attr': {'placeholder': 'Choisissez les images...'}}) }}
    
    {# Sur la route "edit_trick", on affiche les images uploadees #}
    {% if app.request.attributes.get('_route') == 'edit_trick' %}
        <div style="display:flex; justify-content: space-around;" >
            {% for image in trick.images %}
                <div>
                    <img src="{{ asset('uploads/' ~ image.name) }}"  alt="image du trick" width="100">   
                    <a href="{{ path('remove_trick_image', {id:image.id}) }}">Supprimer</a>
                </div>  
            
            {% endfor %}
        </div>
    {% endif %}         

    {# Pour selectionner une ou plusieurs videos #}
    <p>Videos</p>
    
    <ul id="video-fields-list"
        data-prototype="{{ form_widget(form.videos.vars.prototype)|e }}"
        data-widget-tags="{{ '<li></li>'|e }}"
        data-widget-counter="{{ form.videos|length }}">   
    {% for videoField in form.videos %} 
        <li>{{ form_row(form.videos, {'label': 'Video', 'attr': {'placeholder': 'Url de la video...'}}) }} 
        
        </li>   
    {% endfor %}
    </ul>
    <button type="button" class="add-another-collection-widget"
            data-list-selector="#video-fields-list">Ajoutez une video</button><br><br>

    
    
    {{ form_row(form.trickGroup, {'label': 'Categorie', 'attr': {'placeholder': 'Categorie...'}}) }}
    

    {# {{ form_widget(form) }} #}
    <button class="btn btn-lg btn-secondary" style="margin:2rem;">{{ button_label|default('Ajouter') }}</button>
{{ form_end(form) }}



<script src="add-collection-widget.js"></script>
